.nav{
  height: 200rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 20rpx;
  margin-top: 80rpx;
}

.nav view
{
  height:180rpx;
  width: 180rpx;
  border: 1px solid #E6E4DB;
  border-radius: 50%;
  font-size: 40rpx;
  box-sizing: content-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
  font-stretch: semi-condensed;
  font-weight: bold;
  opacity: 0.8;
}

#days{
  color: #FEEEDF;
}
