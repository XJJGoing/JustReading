.all{
  height: auto;
  width: 100%;
  overflow-y: scroll;
  background-image: url(http://wx1.sinaimg.cn/large/0060lm7Tly1g3bitbf69yj30hs0vmt90.jpg);
  background-size:100% 100%;
  }

::-webkit-scrollbar{
  width: 2rpx;
  height: 6rpx;
}

.title{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  height: 100rpx;
  width: 100%;
  background-color: #FBE7E8
}

.title button{
  width: 150rpx;
  height: 100rpx;
  border-radius: 20rpx;
  font-size: 25rpx;
  text-align: center;
  line-height: 100rpx;
  font-weight: bold;
  border:0rpx;
}

.my{
  position: relative;
  width: 100%;
  height: 100rpx;
  background-color: #FFF3DB;
  display: flex;
  flex-direction: row;
  float: left;
  font-size: 30rpx;
  line-height: 100rpx;
  margin-top: 20rpx;
}

.my image{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  margin-left: 50rpx;
}

.clear{
  clear: both;
  margin-bottom: 50rpx;
}
.detail{
  position: absolute;
  right: 0rpx;
  width: 200rpx;
  height: 100rpx;
  background-color: #E4E5D8;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  line-height: normal !important;
  font-size: 25rpx;
}

.content{
  position: relative;
  width: 100%;
  height: 100rpx;
  margin-top: 10rpx;
  background-color: #FBE7E8;
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  line-height: 100rpx;
}

.content image{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  margin-left: 50rpx;
}

.order{
margin-left: 50rpx;
font-size: 35rpx;
font-weight: bold;
}

.order_image{
 height: 5rpx;
 width: 5rpx;
 margin-left: 0rpx;
}

.name{
  margin-left: 30rpx;
  font-size: 20rpx;
}