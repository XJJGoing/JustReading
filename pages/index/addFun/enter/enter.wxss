.session1
{
  width: 100%;
  height: 1200rpx;
  position:relative;
}
.content
{
  position: absolute;
  left: 0rpx;
  top: 100rpx;
  width:100%;
  height: 1200rpx;
  text-align: center;
  font-size: 35rpx;
  letter-spacing:5rpx;
  font-family: "仿宋";
}
::-webkit-scrollbar
{
  width: 1rpx;
  height: 6rpx;
}

/* 账号输入框样式 */
.session1 .input1{
  height: 80rpx;
  line-height: 80rpx;
  margin:20rpx 0;
  border-bottom: 1rpx  solid #0096D9;
  padding-left:20rpx;
}
/* 显示清除按钮 */
.session1 a{
  position:absolute;
  right:20rpx;
  top:45rpx;
  z-index:2;
}

#biyan{
  position:absolute;
  right:0rpx;
  top:-55rpx;
  z-index:2;
}
/* 密码的使用 */
.session1 .we-cell{
  height: 80rpx;
  line-height: 80rpx;
  margin: 20rpx 0;
  border-bottom: 1rpx solid #0096D9;
  padding-left:20rpx;
  position:relative;
}
/* button按钮样式 */
.btn-area button{
  width:80%;
  margin:30rpx auto;
  border:0px;
  background:#0096D9; 
  margin-top:100rpx;
}