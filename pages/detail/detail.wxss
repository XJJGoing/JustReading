.all{
  font-family: "楷体";
  font-size: 18rpx;
  height: 1200rpx;
}

::-webkit-scrollbar{
  width: 1rpx;
  height: 6rpx;
}

.timu{
  text-align: left;
  margin-top: 40rpx;
  line-height: 60rpx;
  font-size: 50rpx;

}
.huanti{
  position: fixed;
  width:100%;
  height:100rpx;
  bottom: 100rpx;
  display: flex;
}
.anniu{
  min-height: 100rpx;
  text-align:left;
  margin-bottom:20rpx;
  line-height: 90rpx;
  font-size: 50rpx;
}

.radio-group{
  display: flex;
  height: 200rpx;
  width: 100%;
}

.radio-group label radio{
  display: block;
  text-align: center;
}
.radio-group label text{
  font-size: 50rpx;
  font-weight: 2rxp;
  color: gray
}
.radio-group view{
  height: 200rpx;
  width: 100%;
  position: relative;
}
.radio-group view label{
  display: block;
  margin-bottom: 20rpx;
}
.radio-group view label text{
  display: inline-block;
  margin-right: 20rpx;
}
.radio-group view label radio{
  display: inline-block
}

.short_answer textarea{
  border:  1px solid gray;
  font-size: 40rpx;
  width: 90%;
  padding: 10rpx;
  margin-left: 5%;
  margin-right: 5%
}
.finish{
  margin-top: 5rpx;
}
.finish button{
  border-radius: 3px;
  margin-left: 10%;
  margin-right: 10%
}